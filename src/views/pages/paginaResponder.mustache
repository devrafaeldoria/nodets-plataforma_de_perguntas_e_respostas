{{>partials/header}}

<div class="container">
    <hr>
    <h1>{{ pergunta.titulo }}</h1>
    <p>{{ pergunta.descricao }}</p>
    <hr>
    <form action="/salvarresposta" method="POST">
        <h3>Responda</h3>
        <label>Responda:</label>
        <textarea placeholder="Digite sua resposta" class="form-control" name="resposta" required></textarea><br>
        <input type="hidden" value="{{ pergunta.id }}" name="pergunta"/>
        <button type="submit" class="btn btn-primary">Responda</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <br>
    {{#respostas}}
        <div class="card">
            <div class="card-body">
                <p>{{ resposta }}</p>
            </div>
        </div>
    {{/respostas}}
</div> 

{{>partials/footer}}