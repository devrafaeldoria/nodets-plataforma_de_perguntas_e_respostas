{{>partials/header}}

<div class="container">
    <div class="card" id="formulario-perguntas">
        <div class="card-header">
            <h3>Realizar pergunta</h3>
        </div>
        <div class="card-body">
            <form action="/salaverpergunta" method="post">
                <label for="titulo">Título</label>
                <input type="text" name="titulo" class="form-control" placeholder="Dígite  o título da pergunta">
                <br><label for="descricao">Descrição</label>
                <textarea name="descricao" class="form-control" placeholder="Digite a descrição da pergunta"></textarea>
                <br><button class="btn btn-primary">Perguntar</button>
            </form>
        </div>
    </div>
</div>

{{>partials/footer}}